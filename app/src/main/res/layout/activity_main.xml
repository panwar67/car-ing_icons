<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">



    <ScrollView
        android:scrollbars="none"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <SearchView
                android:layout_width="match_parent"
                android:id="@+id/search_view"

                android:queryHint="Search for service and shops"

                android:layout_height="wrap_content">

            </SearchView>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/service_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Your Service"/>

                <LinearLayout
                    android:background="#ffffff"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:background="#ffffff"
                        android:src="@drawable/mech"
                        android:id="@+id/mechanical_service"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/electrical_services"
                        android:src="@drawable/elec"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:src="@drawable/bump"
                        android:layout_weight="1"
                        android:id="@+id/bumper_service"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/mech_services_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Mechanical "
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/electrical_services_text"
                        android:layout_weight="1"

                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Electrical "
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/bumper_services_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Bumper "
                        android:layout_height="wrap_content" />



                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="5dp"
                        android:src="@drawable/tire"
                        android:id="@+id/tyre_service"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:src="@drawable/susp"
                        android:layout_weight="1"
                        android:id="@+id/suspension_service"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <ImageView

                        android:layout_weight="1"
                        android:id="@+id/aligment_service"
                        android:src="@drawable/alig"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tyre_services_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Tyre "
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/suspension_services_text"
                        android:layout_weight="1"

                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Suspension "
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/alignment_services_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Alignment "
                        android:layout_height="wrap_content" />



                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="5dp"
                        android:src="@drawable/light"
                        android:id="@+id/light_service"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/key_service"
                        android:src="@drawable/key"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <ImageView
                        android:id="@+id/full_service"
                        android:layout_weight="1"
                        android:src="@drawable/full"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/light_services_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Lights"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/key_services_text"
                        android:layout_weight="1"

                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Key "
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/full_service_services_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Full Service"
                        android:layout_height="wrap_content" />



                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ac_service"
                        android:src="@drawable/ac"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/battery_service"
                        android:src="@drawable/batt"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <ImageView
                        android:id="@+id/body_service"
                        android:src="@drawable/bodyshop"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/ac_services_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="A/C "
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/battery_services_text"
                        android:layout_weight="1"

                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Battery "
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/body_services_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Body Shop"
                        android:layout_height="wrap_content" />



                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/acces_service"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/cara"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/gauges_service"
                        android:src="@drawable/gaug"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <ImageView
                        android:id="@+id/wind_service"
                        android:src="@drawable/wind"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/access_services_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Car Accessories"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/gauges_services_text"
                        android:layout_weight="1"

                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Gauges"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/wind_services_text"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:text="Wind Shield"
                        android:layout_height="wrap_content" />



                </LinearLayout>





            </LinearLayout>



        </LinearLayout>

    </ScrollView>




</LinearLayout>

